mixin main-cover(name,occupation)
  section.main-cover 
    .title 
      h1.title__doctor=name
      hr
      p.title__occupation=occupation
    .doctor-photo 

mixin skill-card(title,description,icon)
  .card
    .card__icon 
      img(src="../../assets/icons/"+icon, alt="icon")
    .skill-info
      p.skill-info__title=title 
      p.skill-info__description=description

mixin about(title,text)
  .about
    .about__info
      .about__info-title
        span=title
      .about__info-text
        p=text
    .doctor-cover 
      .doctor-cover__rectangle 
      .doctor-cover__photo 

mixin video()
  .light 
    a(class="boxclose" id="boxclose" onclick="lightbox_close();")
    video(id="doctor-video" width="600" controls)
      source(src="../../assets/videos/doctor-video.mp4")
  div(id="fade" onclick="lightbox_close();")

mixin testimony-card(name,occupation,photo,text)
  .testimony-card
    p.testimony-card__text=text
    .testimony-card__person
      img(src="../../assets/img/testimonios/"+photo, alt="Foto de persona")
      .testimony-card__person-info
        span=name
        p=occupation
    hr

mixin social-media(tiktok_link,instagram_link,facebook_link)
  .social-media
    a(href=tiktok_link target="_blank" class="social-media__tiktok")
    a(href=instagram_link target="_blank" class="social-media__instagram")
    a(href=facebook_link target="_blank" class="social-media__facebook")

mixin footer-info(copyright,developer_sign,email)
  .footer-info
    span.footer-info__copyright=copyright
    span.footer-info__copyright-bellow All right reserved
    span.footer-info__developer-sign=developer_sign
    span.footer-info__email=email

mixin carousel(title,description,icon,id)
  .services__carrousel 
        .services__carrousel-icon
          img(src="../../assets/icons/carrousel/"+icon, alt="Icono")
        .services__carrousel-info
          span.services__carrousel-info__title=title
          span.services__carrousel-info__description=description
          a(data-bs-toggle="modal" data-bs-target="#"+id) MÁS INFORMACIÓN
  
mixin modal(title,id,text,link)
  div(class="modal" id=id tabindex="-1" aria-labelledby="label_"+id aria-hidden="true")
    div(class="modal-dialog modal-dialog-centered")
      div(class="modal-content")
        div(class="modal-header")
          h5(class="modal-title" id="label_"+id)=title
          button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close")
        div(class="modal-body")
          p=text
        div(class="modal-footer")
          a(href=link target="_blank" class="btn btn-primary") Reservar cita